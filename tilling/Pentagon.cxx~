#include <cmath>
#include "Pentagon.h"
Pentagon::Pentagon(double length):Shape(length){};
int Pentagon::check(double dx,double dy,double dphi,Shape* unit)
{
  const int MAX = 100;
  int total(0);
  for(int x = -MAX;x<MAX;x++)
    for(int y = -MAX;y<MAX;y++)
    {
      total += check(sqrt(pow(x+dx,2)+pow(y+dy,2)),dphi,Shape* unit);
    }
  return total;
}
bool Pentagon::check(double distance,double phi,Shape* unit)
{
  return unit->scan(distance,phi);
}
int Pentagon::n()
{
  return 5;
}
};
